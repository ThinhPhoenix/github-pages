---
import SiteNavigation from '../components/site-navigation.astro';
import HeroSection from '../components/hero-section.astro';
import FeaturesSection from '../components/features-section.astro';
import FaqSection from '../components/faq-section.astro';
import SiteFooter from '../components/site-footer.astro';
---

<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Deploy to GitHub Pages</title>
  <link rel="shortcut icon" href="github-pages/favicon.svg" type="image/x-icon">
  <link rel="preconnect" href="https://fonts.googleapis.com">
  <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
  <link href="https://fonts.googleapis.com/css2?family=Tiny5&family=Victor+Mono:wght@400;500;600;700;900&display=swap" rel="stylesheet">
  <link rel="stylesheet" href="/src/styles/global.css">
  <script src="https://unpkg.com/@phosphor-icons/web"></script>
  <script is:inline src="https://cdn.tailwindcss.com"></script>
  <script is:inline>
    tailwind.config = {
      theme: {
        extend: {
            fontFamily: {
              sans: ['Victor Mono', 'monospace'],
              mono: ['Victor Mono', 'monospace'],
              display: ['Tiny5', 'monospace'],
            }
        }
      }
    }
  </script>
</head>
<body class="bg-[#0a0a0a] text-white antialiased">
  <SiteNavigation />
  <HeroSection />
  <FeaturesSection />
  <FaqSection />
  <SiteFooter />
</body>
</html>
