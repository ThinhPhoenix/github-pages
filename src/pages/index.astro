---
import SiteNavigation from '../components/site-navigation.astro';
import HeroSection from '../components/hero-section.astro';
import FeaturesSection from '../components/features-section.astro';
import FaqSection from '../components/faq-section.astro';
import SiteFooter from '../components/site-footer.astro';
---

<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Deploy to GitHub Pages</title>
  <link rel="shortcut icon" href="favicon.svg" type="image/x-icon">
  <link rel="preconnect" href="https://fonts.googleapis.com">
  <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
  <link href="https://fonts.googleapis.com/css2?family=Tiny5&family=Victor+Mono:wght@400;500;600;700;900&display=swap" rel="stylesheet">
  <style is:global>
    *, *::before, *::after { cursor: none !important; }
    html, body, a, button, [role="button"], input, textarea, select, [onclick], .cursor-pointer, label, summary, [tabindex] { cursor: none !important; }
  </style>
  <script src="https://unpkg.com/@phosphor-icons/web"></script>
  <script is:inline src="https://cdn.tailwindcss.com"></script>
  <script is:inline>
    tailwind.config = {
      theme: {
        extend: {
            fontFamily: {
              sans: ['Victor Mono', 'monospace'],
              mono: ['Victor Mono', 'monospace'],
              display: ['Tiny5', 'monospace'],
            }
        }
      }
    }
  </script>
</head>
<body class="bg-[#0a0a0a] text-white antialiased" style="cursor: none;">
  <!-- Custom Cursor -->
  <div id="cursor-main" class="fixed w-4 h-4 bg-white pointer-events-none z-[9999] mix-blend-difference" style="transform: translate(-50%, -50%);"></div>
  <div class="cursor-trail fixed w-2 h-2 bg-white/60 pointer-events-none z-[9998] mix-blend-difference" style="transform: translate(-50%, -50%);"></div>
  <div class="cursor-trail fixed w-2 h-2 bg-white/50 pointer-events-none z-[9997] mix-blend-difference" style="transform: translate(-50%, -50%);"></div>
  <div class="cursor-trail fixed w-2 h-2 bg-white/40 pointer-events-none z-[9996] mix-blend-difference" style="transform: translate(-50%, -50%);"></div>
  <div class="cursor-trail fixed w-2 h-2 bg-white/30 pointer-events-none z-[9995] mix-blend-difference" style="transform: translate(-50%, -50%);"></div>
  <div class="cursor-trail fixed w-2 h-2 bg-white/20 pointer-events-none z-[9994] mix-blend-difference" style="transform: translate(-50%, -50%);"></div>

  <SiteNavigation />
  <HeroSection />
  <FeaturesSection />
  <FaqSection />
  <SiteFooter />

  <script is:inline>
    (function() {
      const mainCursor = document.getElementById('cursor-main');
      const trails = document.querySelectorAll('.cursor-trail');
      
      let mouseX = 0, mouseY = 0;
      let mainX = 0, mainY = 0;
      let trailPositions = trails.length > 0 ? Array(trails.length).fill({ x: 0, y: 0 }) : [];
      
      document.addEventListener('mousemove', (e) => {
        mouseX = e.clientX;
        mouseY = e.clientY;
      });

      function animate() {
        mainX = mouseX;
        mainY = mouseY;
        mainCursor.style.left = mainX + 'px';
        mainCursor.style.top = mainY + 'px';

        trailPositions.forEach((pos, i) => {
          const targetX = i === 0 ? mainX : trailPositions[i - 1].x;
          const targetY = i === 0 ? mainY : trailPositions[i - 1].y;
          trailPositions[i] = {
            x: pos.x + (targetX - pos.x) * 0.5,
            y: pos.y + (targetY - pos.y) * 0.5
          };
          trails[i].style.left = trailPositions[i].x + 'px';
          trails[i].style.top = trailPositions[i].y + 'px';
        });

        requestAnimationFrame(animate);
      }
      
      animate();
    })();
  </script>
</body>
</html>
