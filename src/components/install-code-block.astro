<div class="max-w-2xl mx-auto">
  <div class="bg-[#161616] border border-white/10 overflow-hidden text-left">
    <!-- Package Manager Tabs -->
    <div class="flex border-b border-white/10">
      <button onclick="switchPmTab('npm')" id="pm-npm" class="pm-tab px-5 py-3 text-sm text-white border-b-2 border-white font-mono transition-colors">
        npm
      </button>
      <button onclick="switchPmTab('bun')" id="pm-bun" class="pm-tab px-5 py-3 text-sm text-gray-500 hover:text-gray-300 font-mono transition-colors">
        bun
      </button>
    </div>
    
    <!-- Code Content -->
    <div class="p-4">
      <!-- npm -->
      <div id="code-npm" class="pm-content">
        <div class="flex items-center justify-between">
          <code class="font-mono text-sm text-gray-300">
            npx <span class="text-blue-400">@thinhphoenix/github-pages</span>
          </code>
          <button onclick="copyCode(this, 'npm-cmd')" class="copy-btn text-gray-500 hover:text-white transition-colors ml-4">
            <i class="ph ph-copy"></i>
          </button>
        </div>
        <code id="npm-cmd" class="hidden">npx @thinhphoenix/github-pages</code>
      </div>
      
      <!-- bun -->
      <div id="code-bun" class="pm-content hidden">
        <div class="flex items-center justify-between">
          <code class="font-mono text-sm text-gray-300">
            bunx <span class="text-blue-400">@thinhphoenix/github-pages</span>
          </code>
          <button onclick="copyCode(this, 'bun-cmd')" class="copy-btn text-gray-500 hover:text-white transition-colors ml-4">
            <i class="ph ph-copy"></i>
          </button>
        </div>
        <code id="bun-cmd" class="hidden">bunx @thinhphoenix/github-pages</code>
      </div>
    </div>
  </div>
  
  <!-- Requirements Note -->
  <div class="mt-3 flex items-center gap-2 text-xs text-gray-500">
    <i class="ph ph-terminal text-gray-400"></i>
    <span>Requires <a href="https://cli.github.com/" target="_blank" class="text-blue-400 hover:text-blue-300 underline">GitHub CLI (gh)</a> to be installed</span>
  </div>
</div>

<!-- Toast Container -->
<div id="toast" class="fixed bottom-8 left-1/2 -translate-x-1/2 bg-[#1a1a1a] border border-white/10 text-white px-5 py-3 shadow-2xl flex items-center gap-3 opacity-0 translate-y-4 transition-all duration-300 pointer-events-none z-50">
  <i class="ph ph-check-circle text-emerald-400 text-lg"></i>
  <span class="text-sm font-medium">Copied to clipboard!</span>
</div>

<script is:inline>
  function switchPmTab(pmId) {
    document.querySelectorAll('.pm-tab').forEach(function(tab) {
      tab.classList.remove('text-white', 'border-b-2', 'border-white');
      tab.classList.add('text-gray-500');
    });
    var activeTab = document.getElementById('pm-' + pmId);
    if (activeTab) {
      activeTab.classList.remove('text-gray-500');
      activeTab.classList.add('text-white', 'border-b-2', 'border-white');
    }
    
    document.querySelectorAll('.pm-content').forEach(function(content) {
      content.classList.add('hidden');
    });
    var activeContent = document.getElementById('code-' + pmId);
    if (activeContent) {
      activeContent.classList.remove('hidden');
    }
  }

  function copyCode(btn, elementId) {
    var el = document.getElementById(elementId);
    if (el && el.textContent) {
      navigator.clipboard.writeText(el.textContent).then(function() {
        showToast();
        
        var icon = btn.querySelector('i');
        if (icon) {
          icon.classList.remove('ph-copy');
          icon.classList.add('ph-check');
          setTimeout(function() {
            icon.classList.remove('ph-check');
            icon.classList.add('ph-copy');
          }, 2000);
        }
      });
    }
  }

  function showToast() {
    var toast = document.getElementById('toast');
    if (toast) {
      toast.classList.remove('opacity-0', 'translate-y-4');
      setTimeout(function() {
        toast.classList.add('opacity-0', 'translate-y-4');
      }, 2000);
    }
  }
</script>
