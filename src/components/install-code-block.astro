<div class="max-w-2xl mx-auto">
  <div class="bg-[#161616] border border-white/10 overflow-hidden text-left">
    <!-- Package Manager Tabs -->
    <div class="flex border-b border-white/10">
      <button onclick="switchPmTab('npm')" id="pm-npm" class="pm-tab px-5 py-3 text-sm text-white border-b-2 border-white font-mono transition-colors">
        npm
      </button>
      <button onclick="switchPmTab('bun')" id="pm-bun" class="pm-tab px-5 py-3 text-sm text-gray-500 hover:text-gray-300 font-mono transition-colors">
        bun
      </button>
    </div>
    
    <!-- Code Content -->
    <div class="p-4">
      <!-- npm -->
      <div id="code-npm" class="pm-content">
        <div class="flex items-center justify-between">
          <code class="font-mono text-sm text-gray-300">
            npx <span class="text-blue-400">@thinhphoenix/github-pages</span>
          </code>
          <button onclick="copyCode(this, 'npm-cmd')" class="copy-btn text-gray-500 hover:text-white transition-colors ml-4">
            <i class="ph ph-copy"></i>
          </button>
        </div>
        <code id="npm-cmd" class="hidden">npx @thinhphoenix/github-pages</code>
      </div>
      
      <!-- bun -->
      <div id="code-bun" class="pm-content hidden">
        <div class="flex items-center justify-between">
          <code class="font-mono text-sm text-gray-300">
            bunx <span class="text-blue-400">@thinhphoenix/github-pages</span>
          </code>
          <button onclick="copyCode(this, 'bun-cmd')" class="copy-btn text-gray-500 hover:text-white transition-colors ml-4">
            <i class="ph ph-copy"></i>
          </button>
        </div>
        <code id="bun-cmd" class="hidden">bunx @thinhphoenix/github-pages</code>
      </div>
    </div>
  </div>
  
  <!-- Requirements Note -->
  <div class="mt-3 flex items-center gap-2 text-xs text-gray-500">
    <i class="ph ph-terminal text-gray-400"></i>
    <span>Requires 
      <span class="link-preview-container inline-block relative group">
        <a href="https://cli.github.com/" target="_blank" class="text-blue-400 hover:text-blue-300 underline">GitHub CLI (gh)</a>
        <!-- Link Preview Panel -->
        <div class="link-preview-panel absolute bottom-full left-1/2 -translate-x-1/2 mb-2 w-[280px] opacity-0 invisible translate-y-2 transition-all duration-300 ease-out z-50 group-hover:opacity-100 group-hover:visible group-hover:translate-y-0 pointer-events-none">
          <div class="bg-[#1a1a1a] border border-white/10 overflow-hidden shadow-2xl">
            <!-- Preview Image -->
            <div class="relative h-[160px] bg-gradient-to-br from-gray-800 to-gray-900 overflow-hidden">
              <img 
                src="https://api.microlink.io/?url=https://cli.github.com/&screenshot=true&meta=false&embed=screenshot.url"
                alt="GitHub CLI Preview" 
                class="absolute inset-0 w-full h-full object-cover"
                onerror="this.style.display='none'; this.nextElementSibling.style.display='flex';"
              />
              <!-- Fallback -->
              <div class="hidden absolute inset-0 items-center justify-center bg-gradient-to-br from-gray-800 to-gray-900">
                <svg class="w-12 h-12 text-gray-600" fill="currentColor" viewBox="0 0 24 24">
